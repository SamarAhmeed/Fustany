<div class="section_padding login_section">
  <div class="container">
    <div class="tab-content forms-sec" id="myTabContent">
      <h2>Sign up</h2>
      <div class="col-md-6 mx-auto col-xs-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">

            <div class="col-lg-12">
              <%= f.label :'Name' %><br />
              <%= f.text_field :full_name, autofocus: true %>
            </div>

            <div class="col-lg-12">
              <%= f.label :'Phone' %><br />
              <%= f.text_field :phone_number, autofocus: true%>
            </div>

            <div class="col-lg-12">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="col-lg-12">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="col-lg-12">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div style="background-color: #ec96af;" class="col-lg-12">
              <%= f.submit "Sign up" , style:'background-color: #ec96af; color:#ffffff; font-size:22px;'%>
            </div>

        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>