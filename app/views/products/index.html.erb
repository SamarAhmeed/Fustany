<p id="notice"><%= notice %></p>
<div class="tab-content" id="myTabContent" style="padding-left: 20%">
  <div class="tab-pane fade show active" id="grid" role="tabpanel" aria-labelledby="grid-tab">
    <h1>All Products</h1>
    <div class="products_section">
      <div class="row">
<!--        <div class="col-lg-4 col-md-6 col-xs-12">-->
          <table class="col-lg-4 col-md-6 col-xs-12">
            <thead class="product_info2">
            <tr>
              <th><h2>Name</h2></th>
              <th><h2>Price</h2></th>
              <th colspan="1"></th>
            </tr>
            </thead>
            <tbody class="product_info2">
          <% @products.each do |product| %>
              <tr>
<!--                <div class="product_info2">-->
                  <td><%= product.pro_name %></td>
                  <td style="color: #ec96af;"><%= '$' + product.price.to_s %></td>
                  <td><%= link_to 'Show', product %></td>
                  <%if current_user %>
                    <%- unless current_user.favorites.exists?(id: product.id) -%>
                      <td><%= link_to 'Add to favorites', favorites_path(product_id: product), method: :post %></td>
                    <%- else -%>
                    <td><%= link_to 'Remove from favorites', favorite_path(product), method: :delete %></td>
                    <%- end -%>
                  <%end %>
          <!--        <td><%#= link_to 'Edit', edit_product_path(product) %></td>-->
          <!--        <td><%#= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
<!--                </div>-->
              </tr>
          <% end %>
            </tbody>
          </table>
<!--        </div>-->
      </div>
    </div>
<!--<br>-->

<%#= link_to 'New Product', new_product_path %>
  </div>
</div>